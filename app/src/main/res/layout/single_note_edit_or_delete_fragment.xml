<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="layoutViewModel"
            type="online.kassaevandrewandrew.notes.NoteViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/single_note_edit__textBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@={layoutViewModel.currentNote.text}"
            />
    </FrameLayout>
</layout>